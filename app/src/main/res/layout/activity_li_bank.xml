<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".contract.Li_WriteBankActivity"
    android:weightSum="624"
    android:background="@drawable/background_color">
    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="0dp"
        android:layout_weight="53"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:onClick="back"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/top_back"
                android:layout_gravity="center"/>
        </LinearLayout>
        <TextView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="[사업자] 계약서 작성"
            android:textColor="@color/title"
            android:textSize="16sp" />
        <LinearLayout
            android:onClick="didTapContractHome"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/top_home"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="571"
        android:orientation="vertical"

        android:weightSum="571">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="0dp"
            android:layout_weight="482"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|top"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="328dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="307dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="정산계좌 정보"
                                android:textSize="21sp"
                                android:textColor="@color/title"
                                android:gravity="bottom"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="송금의뢰 수수료 (500원 발생) "
                                android:gravity="bottom"
                                android:textSize="10sp"
                                android:paddingBottom="3dp"
                                android:textColor="@color/input_color"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="45dp"
                            android:src="@drawable/icon_help"
                            android:onClick="onClickHelp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:onClick="clickView"
                        android:layout_marginTop="21dp"
                        android:layout_width="328dp"
                        android:layout_gravity="center"
                        android:layout_height="50dp"
                        android:background="@drawable/input_basic"
                        android:orientation="horizontal"
                        android:paddingLeft="11dp">
                        <!--<TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="은행명"
                            android:textSize="11dp"
                            android:gravity="center|left"
                            android:textColor="#999999"/>-->
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center|left"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/icon_bank"/>
                        <Spinner
                            android:id="@+id/li_bank_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:textSize="13dp"
                            android:fontFamily="@font/notosanskr"
                            android:textColor="@color/input_color"
                            android:entries="@array/bank"/>
                    </LinearLayout>
                    <LinearLayout
                        android:onClick="clickView"
                        android:id="@+id/banknum"
                        android:layout_gravity="center"
                        android:layout_marginTop="21dp"
                        android:layout_width="328dp"
                        android:layout_height="50dp"
                        android:background="@drawable/input_basic"
                        android:orientation="horizontal"
                        android:paddingLeft="11dp">
                        <!--<TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="계좌번호"
                            android:textSize="11dp"
                            android:gravity="center|left"
                            android:textColor="#999999"/>-->
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center|left"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/icon_account_num"/>
                        <EditText
                            android:id="@+id/li_bank_num"
                            android:background="@null"
                            android:maxLines="1"
                            android:inputType="number"
                            android:hint="계좌번호(-없이 입력)"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/input_color"
                            android:gravity="center|left"
                            android:textSize="13dp"
                            android:singleLine="true"
                            android:maxLength="20"
                            android:textColorHint="@color/input_color"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/notosanskr"/>
                    </LinearLayout>
                    <LinearLayout
                        android:onClick="clickView"
                        android:id="@+id/depositor"
                        android:layout_gravity="center"
                        android:layout_marginTop="21dp"
                        android:layout_width="328dp"
                        android:layout_height="50dp"
                        android:background="@drawable/input_basic"
                        android:orientation="horizontal"
                        android:paddingLeft="11dp">
                        <!--<TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="예금주"
                            android:textSize="11dp"
                            android:gravity="center|left"
                            android:textColor="#999999"/>-->
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center|left"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/icon_account_user"/>
                        <EditText
                            android:inputType="text"
                            android:id="@+id/li_depositor"
                            android:background="@null"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/input_color"
                            android:gravity="center|left"
                            android:textSize="13dp"
                            android:singleLine="true"
                            android:hint="예금주"
                            android:textColorHint="@color/input_color"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/notosanskr"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_marginTop="21dp"
                        android:layout_width="328dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra ="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/input_color"
                            android:text="@string/bank_text_1" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="21dp"
                        android:layout_width="328dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/input_basic"
                        android:orientation="horizontal"
                        android:paddingLeft="11dp">
                        <!--<TextView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:paddingLeft="11dp"
                            android:paddingTop="8dp"
                            android:text="전자서명"
                            android:textSize="11sp"
                            android:textColor="#999999"/>-->
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center|left"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/icon_sign"/>
                        <TextView
                            android:inputType="text"
                            android:id="@+id/signName1"
                            android:layout_width="174dp"
                            android:layout_height="match_parent"
                            android:hint="서명이 필요합니다."
                            android:background="@null"
                            android:textColor="@color/input_color"
                            android:textColorHint="@color/input_color"
                            android:gravity="right|center"
                            android:paddingRight="8dp"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="98dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:onClick="sign1"
                            android:text="(서명 또는 인)"
                            android:textColor="@color/input_color"
                            android:textSize="13sp" />

                        <ImageView
                            android:onClick="sign1"
                            android:id="@+id/signPop1"
                            android:visibility="gone"
                            android:layout_width="98dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_marginTop="21dp"
                        android:layout_width="328dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra ="5dp"
                            android:text="@string/bank_text_2"
                            android:textColor="@color/input_color"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="21dp"
                        android:layout_width="match_parent"
                        android:layout_height="163dp"
                        android:orientation="vertical"
                        android:background="#F5F5F5"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="328dp"
                            android:layout_height="131dp"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:paddingRight="18dp"
                            android:paddingLeft="18dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:weightSum="2">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:text="서 명 일"
                                    android:textColor="@color/title"
                                    android:textSize="13sp"
                                    android:gravity="center|left"/>
                                <TextView
                                    android:id="@+id/today"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:textColor="@color/input_color"
                                    android:textSize="13sp"
                                    android:layout_height="match_parent"
                                    android:gravity="center|right"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:text="신 청 인"
                                    android:textSize="13sp"
                                    android:textColor="@color/title"
                                    android:gravity="center|left"/>
                                <TextView
                                    android:id="@+id/underName"
                                    android:textSize="13sp"
                                    android:textColor="@color/input_color"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:maxLines="1"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:singleLine="true"
                                    android:hint="실명을 입력해주세요"
                                    android:textColorHint="@color/input_color"
                                    android:gravity="center|right"
                                    android:inputType="text"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                android:layout_weight="0"
                                android:visibility="gone">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:textSize="13sp"
                                    android:textColor="@color/title"
                                    android:layout_height="match_parent"
                                    android:text="담 당 자"
                                    android:gravity="center|left"/>
                                <EditText
                                    android:id="@+id/li_agent"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:textSize="13sp"
                                    android:singleLine="true"
                                    android:maxLines="1"
                                    android:textColorHint="@color/input_color"
                                    android:textColor="@color/input_color"
                                    android:background="@null"
                                    android:hint="추천 대리점 입력"
                                    android:gravity="center|right"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="89"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:onClick="goBeforeContractFrm"
                android:layout_width="350dp"
                android:layout_height="72dp"
                android:src="@drawable/find_btn_next"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
