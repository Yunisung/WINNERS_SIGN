<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    android:orientation="vertical"
    android:paddingLeft="9dp"
    android:weightSum="624"
    tools:context=".find.FindIdActivity">

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="53"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:onClick="back"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/top_back" />
        </LinearLayout>

        <TextView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="아이디 찾기"
            android:textColor="@color/title"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="571"
        android:orientation="vertical"

        android:weightSum="571">

        <LinearLayout
            android:layout_width="328dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="482"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="328dp"
                android:layout_height="57dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="307dp"
                    android:layout_height="57dp"
                    android:gravity="bottom"
                    android:text="본인확인 핸드폰 번호로 인증"
                    android:textColor="@color/title"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/icon_help"
                    android:onClick="onClickHelp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nameLy"
                android:layout_width="328dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="21dp"
                android:background="@drawable/input_basic"
                android:onClick="clickView"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        app:srcCompat="@drawable/icon_name" />
                </LinearLayout>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="이름 | 실명을 입력해주세요"
                    android:inputType="text"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="9dp"
                    android:textColor="@color/input_color"
                    android:textColorHint="@color/input_color"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="328dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/emailLy"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/input_small_basic"
                    android:onClick="clickView">

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="right|center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            app:srcCompat="@drawable/icon_mobile" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:gravity="center|left"
                        android:hint="휴대폰번호(-없이 입력)"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="9dp"
                        android:textColor="@color/input_color"
                        android:textColorHint="@color/input_color"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sendBtn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_small_bg"
                        android:gravity="center"
                        android:onClick="sendNum"
                        android:text="인증번호 전송"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/numLy"
                android:layout_width="328dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="21dp"
                android:background="@drawable/input_basic"
                android:onClick="clickView"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        app:srcCompat="@drawable/icon_num_enter" />
                </LinearLayout>

                <EditText
                    android:id="@+id/phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="인증번호 입력"
                    android:inputType="number"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:paddingLeft="9dp"
                    android:textColor="@color/input_color"
                    android:textColorHint="@color/input_color"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="89"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="350dp"
                android:layout_height="72dp"
                android:onClick="goFindIdFinishFrm"
                android:src="@drawable/find_btn_next" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>