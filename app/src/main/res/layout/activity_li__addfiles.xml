<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contract.Li_AddFilesActivity"
    android:orientation="vertical"
    android:weightSum="624"
    android:background="@drawable/background_color">
    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="0dp"
        android:layout_weight="53"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:onClick="back"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/top_back"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="[사업자] 계약서 작성"
            android:textColor="@color/title"
            android:textSize="16sp" />
        <LinearLayout
            android:onClick="didTapContractHome"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="18.31dp"
                android:layout_gravity="center"
                android:src="@drawable/top_home"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="571"
        android:orientation="vertical"
        
        android:weightSum="571">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="482"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="328dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|top"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="328dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cc1"
                            android:layout_width="307dp"
                            android:layout_height="59dp"
                            android:gravity="bottom"
                            android:text="첨부서류 [필수]"
                            android:textColor="@color/title"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/icon_help"
                            android:onClick="onClickHelp"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:gravity="left"
                        android:text="신분증 첨부"
                        android:textColor="@color/input_color"
                        android:textSize="11dp"
                        android:layout_marginTop="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:background="@drawable/file_bg"
                        android:orientation="vertical"
                        android:onClick="onClickImgIdentification">

                        <ImageView
                            android:id="@+id/imgIdentification"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="328dp"
                        android:layout_height="90dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/li_btnIdentification_ga"
                            android:layout_width="160dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_mid_bg"
                            android:fontFamily="@font/notosanskr"
                            android:gravity="center"
                            android:onClick="OpenLiIdentificationPhoto"
                            android:text="사진첩 열기"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/li_btnIdentification_ca"
                            android:layout_width="155dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_mid_bg"
                            android:fontFamily="@font/notosanskr"
                            android:gravity="center"
                            android:onClick="OpenLiIdentificationCamera"
                            android:text="카메라 열기"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:gravity="left"
                        android:text="통장사본 첨부"
                        android:textColor="@color/input_color"
                        android:textSize="11dp" />

                    <LinearLayout
                        android:layout_width="328dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:background="@drawable/file_bg"
                        android:orientation="vertical"
                        android:onClick="onClickImgBankBook">



                        <ImageView
                            android:id="@+id/imgBankbook"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="328dp"
                        android:layout_height="90dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/li_btnBankbook_ga"
                            android:layout_width="160dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_mid_bg"
                            android:fontFamily="@font/notosanskr"
                            android:gravity="center"
                            android:onClick="OpenLiBankbookPhoto"
                            android:text="사진첩 열기"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/li_btnBankbook_ca"
                            android:layout_width="160dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_mid_bg"
                            android:fontFamily="@font/notosanskr"
                            android:gravity="center"
                            android:onClick="OpenLiBankbookCamera"
                            android:text="카메라 열기"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:gravity="left"
                        android:text="사업자 등록증 첨부"
                        android:textColor="@color/input_color"
                        android:textSize="11dp" />

                    <LinearLayout
                        android:layout_width="328dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:background="@drawable/file_bg"
                        android:orientation="vertical"
                        android:onClick="onClickImgLicense">



                        <ImageView
                            android:id="@+id/imgLicense"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="328dp"
                        android:layout_height="90dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/bs_num_ga"
                            android:layout_width="160dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_mid_bg"
                            android:fontFamily="@font/notosanskr"
                            android:gravity="center"
                            android:onClick="OpenBsNumPhoto"
                            android:text="사진첩 열기"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/bs_num_ca"
                            android:layout_width="160dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_mid_bg"
                            android:fontFamily="@font/notosanskr"
                            android:gravity="center"
                            android:onClick="OpenBsNumCamera"
                            android:text="카메라 열기"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="89"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="350dp"
                android:layout_height="72dp"
                android:onClick="goLiBankFrm"
                android:src="@drawable/find_btn_next" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>